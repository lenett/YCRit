@model EvaWeb.Areas.library.Models.Books

<h2>Удаление книги</h2>
<dl>
    @if (Model.Picture != null)
        {
            <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Picture))" />
        }
    <dt>Название</dt>
    <dd>
        @Html.DisplayFor(model => model.Name)
    </dd>
 
    <dt>Автор</dt>
    <dd>
        @Html.DisplayFor(model => model.Author)
    </dd>
 
</dl>
 
@using (Html.BeginForm())
{
    <input type="submit" value="Удалить"  />
}